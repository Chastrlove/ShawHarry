{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "noEmit": true,
    "lib": ["esnext","dom"],
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "utils/*": [
        "utils/*"
      ],
      "entry/*": [
        "client/entry/*"
      ],
      "resource/*": [
        "client/resource/*"
      ],
      "common/*": [
        "client/common/*"
      ],
      "components/*": [
        "client/components/*"
      ],
      "page/*": [
        "client/page/*"
      ],
      "api/*": [
        "client/api/*"
      ]
    }
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "src/client/**/*",
    "src/utils/**/*"
  ]
}
