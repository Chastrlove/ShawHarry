{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "pretty": true,
    "jsx": "preserve",
    "importHelpers": true,
    "noEmitHelpers": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": true,
    "noStrictGenericChecks": true,
    "locale": "zh-cn",
    "baseUrl": ".",
    "paths": {
      "utils/*": ["src/utils/*"],
      "entry/*": ["src/client/entry/*"],
      "assets/*": ["src/client/assets/*"],
      "resource/*": ["src/client/resource/*"],
      "common/*": ["src/client/common/*"],
      "components/*": ["src/client/components/*"],
      "page/*": ["src/client/page/*"],
      "api/*": ["src/client/api/*"],
      "config/*": ["src/client/config/*"]
    },
    "lib": ["dom", "es6"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
